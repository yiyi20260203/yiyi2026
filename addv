    <button onclick="copyText()">点击复制微信号</button>

    <script>
        function copyText() {
            const text = document.querySelector('.weixin').innerText;
            navigator.clipboard.writeText(text).then(() => {
                alert('微信号已复制到剪贴板！');
            });
        }
    </script>
